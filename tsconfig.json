{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "lib": ["es6", "dom"],
      "jsx": "react",
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noEmit": true,
      "experimentalDecorators": true,
      "baseUrl": "./",
      "allowSyntheticDefaultImports": true,
      "noErrorTruncation": true,
      "allowJs": true,
      "paths": {
        "@totalsoft/change-tracking": ["./packages/change-tracking/src"],
        "@totalsoft/change-tracking-react": ["./packages/change-tracking-react/src"],
        "@totalsoft/pure-validations": ["./packages/pure-validations/src"],
        "@totalsoft/pure-validations-react": ["./packages/pure-validations-react/src"],
        "@totalsoft/rules-algebra": ["./packages/rules-algebra/src"],
        "@totalsoft/rules-algebra-react": ["./packages/rules-algebra-react/src"],
        "@totalsoft/zion": ["./packages/zion/src"],
        "@totalsoft/zion/*": ["./packages/zion/src/*"]
      }
    },
    "exclude": ["**/build/"]
  }